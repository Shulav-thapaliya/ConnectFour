<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/gridsetting"
    android:gravity="center">

    <!-- Spinner for selecting grid sizes -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grid_size"
        android:textColor="@color/black"
        android:fontFamily="@font/ghost2"
        android:layout_marginBottom="8dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_margin="8dp"/>


    <Spinner
        android:id="@+id/spinnerGridSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <!-- Spinner for selecting grid names/themes -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_theme"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/ghost2"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinnerGridName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!-- Spinner for selecting game mode -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_game_mode"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/ghost2"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinnerGameMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonCreateGameSettings"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/create_game"
        android:fontFamily="@font/ghost2"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:onClick="createGameSettings"/>


</LinearLayout>
